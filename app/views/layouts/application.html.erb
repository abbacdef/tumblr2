<!DOCTYPE html>
<html>
  <head>
  <div id="bit2"><div id="post_content"> <title>Tumblr</title><div/>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <div id="bite"><li class"category><%= link_to "Tumbl", root_path %>r</li></div></br>
        <li><%= link_to "Posts", root_path %></li>
        <li><%= link_to "About", about_path %></li>

        </ul>

        <% if !user_signed_in? %>
        <br>
        <br>

         <p class="sign_in"><%= link_to "User Login", new_user_session_path %></p><%end%>

      </div>

    <div id="main_content">
      <div id="header">

        <% if current_page?(root_path) %>
        <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
        <p>Tumblr<p>
          <% else %>
        <%= link_to "Back to Main Page", root_path %>
        <% end %>



  <div class="buttons">
    <% if user_signed_in? %>
    <button class="button"><%= link_to "make Post", new_post_path %></button>
    <button class="button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %><%end%></button>

      </div>

    </div>


      <% flash.each do |name, msg| %>
         <%= content_tag(:div, msg, class: "alert") %>
         <% end %>

    <%= yield %>
</div>
  </body>
</html>
